<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="הזן את שמך" />

    <Button
        android:id="@+id/buttonGreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לחץ לברכה"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1" />

    <TextView
        android:id="@+id/textViewInteresting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אני אוהב לתכנת!"
        android:textSize="18sp"
        android:layout_marginTop="12dp" />

    <!-- Center the ImageButton and add top margin -->
    <ImageButton
        android:id="@+id/imageButtonSwitch"
        android:layout_width="51dp"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="החלף תמונה"
